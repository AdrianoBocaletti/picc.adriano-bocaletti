<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PaddingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.cast.treinamento.app.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/txtExemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/minha_primeira_imagem"
        android:src="@drawable/ic_launcher" 
        />
    <Button 
            android:id="@+id/btnExemplo"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
           	android:drawableLeft="@drawable/ic_launcher"
           	android:text="@string/meu_botao"
            />

</LinearLayout>